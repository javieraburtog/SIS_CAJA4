<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>

	<session-factory name="sessionFactoryConsultas">

		<property name="connection.provider_class">
			org.hibernate.connection.C3P0ConnectionProvider
		</property>

		<property name="hibernate.c3p0.min_size">0</property>
		<property name="hibernate.c3p0.max_size">100</property>
		<property name="hibernate.c3p0.initialPoolSize">0</property>
		<property name="hibernate.c3p0.acquireIncrement">1</property>
		<property name="hibernate.c3p0.max_statements">3000</property>
		<property name="hibernate.c3p0.maxStatementsPerConnection">50</property>
		<property name="hibernate.c3p0.maxConnectionAge">200</property>
		<property name="hibernate.c3p0.timeout">200</property>
		<property name="hibernate.c3p0.idle_test_period">50</property>

		<property name="hibernate.default_schema">gcpmcaja</property>
		<property name="hibernate.default_catalog">SYSTEMIP</property>

		<property name="hibernate.connection.username">appcp</property>
		<property name="hibernate.connection.password">appcp1810</property>

		<property name="hibernate.connection.url">jdbc:as400:192.168.1.3/gcpmcaja;prompt=false;behavior override=1;</property>
		<property name="hibernate.connection.driver_class">com.ibm.as400.access.AS400JDBCDriver</property>
		<property name="hibernate.dialect">org.hibernate.dialect.DB2Dialect</property>
		<property name="current_session_context_class">thread</property>
		<property name="hibernate.connection.release_mode">after_statement</property>



		<mapping resource="com/casapellas/entidades/Vf55ca01.hbm.xml" />
		
		<mapping resource="com/casapellas/entidades/Credhdr.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Finandet.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Vmora.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Vhfactura.hbm.xml" />

		<mapping resource="com/casapellas/entidades/Recibodet.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Recibojde.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Recibo.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Recibofac.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Cambiodet.hbm.xml" />
		<mapping resource="com/casapellas/entidades/Solicitud.hbm.xml" />


	</session-factory>
</hibernate-configuration>